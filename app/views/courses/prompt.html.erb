<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">学分提示</h3>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>
            <tr>
              <th>类别</th>
              <th>公共必修课程及学分</th>
              <th>公共选修课程及学分</th>
              <th>专业学位课学分要求</th>
              <th>总学分要求</th>
            </tr>
            </thead>
            <tbody>
            <tr>
              <td>学习要求</td>
              <td>人文系列讲座（1学分）<br>xxx<br>xxx</td>
              <td>>=2学分</td>
              <td>>=12学分</td>
              <td>>=30学分</td>
            </tr>
            <tr>
              <td>选课情况</td>
              <td></td>
              <td><%= @public_elective_credits %></td>
              <td><%= @major_credits %></td>
              <td><%= @total_credits %></td>
            </tr>
            <tr>
              <td>获取学分</td>
              <td></td>
              <td><%= @public_elective_credits_obtained %></td>
              <td><%= @major_credits_obtained %></td>
              <td><%= @total_credits_obtained %></td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


