<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">查看课表</h3>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>
            <tr>
              <th colspan="2">节次/星期</th>
              <th>星期一</th>
              <th>星期二</th>
              <th>星期三</th>
              <th>星期四</th>
              <th>星期五</th>
              <th>星期六</th>
              <th>星期日</th>
            </tr>
            </thead>
            <tbody>
            <% 12.times do |j| %>
            <tr>
              <% if j%4==0 %>
              <th rowspan="4">上午</th>
              <% end %>
              <th><%= j+1 %></th>
              <% 7.times do |i| %>
              <th>
                <%= @schedule[i][j].name if @schedule[i][j]%>
              </th>
              <% end %>
            </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


